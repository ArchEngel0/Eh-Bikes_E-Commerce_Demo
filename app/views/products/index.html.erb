<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<% if current_user && current_user.admin? %>
<%= link_to "New product", new_product_path %>
<br><br>
<% end %>

<div id="search-form">
  <%= form_tag(products_path, method: :get) do %>
      <label>
      <%= check_box_tag :on_sale, 1, params[:on_sale] %>
      On Sale
    </label>
    <label>
      <%= check_box_tag :new_products, 1, params[:new_products] %>
      New Products
    </label>
    <%= select_tag :category, options_for_select(Category.all.map { |c| [c.name, c.id] }, params[:category]), include_blank: "All Categories" %>
    <%= text_field_tag :search, params[:search], placeholder: "Search" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div id="products">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <p><%= product.image %></p>
            <p>
              <% if product.sale %>
                <strong>On Sale!</strong>
              <% end %>
            </p>
            <% if product.categories.any? %>
            <p>
              <%# product categories %>
              Category:
              <% product.categories.each do |category| %>
                <%= link_to category.name, category %>
              <% end %>
            </p>
            <% end %>
            <p>
              <%= link_to "Show this product", product %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @products %>


